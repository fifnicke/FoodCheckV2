<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.ju.students.svni1493.foodcheckv2.RecipeActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayoutRecipe1"
        android:layout_centerHorizontal="true"

        >
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search for recipes"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight=".5"
            android:id="@+id/btnRecipeAdd"
            android:text="Add custom recipe"
            android:layout_marginTop="78dp"
            android:layout_alignParentLeft="true"
            android:textSize="12sp"
            />
        <Button
            android:layout_height="wrap_content"
            android:id="@+id/btnSearch"
            android:text="SEARCH online"
            android:layout_marginTop="78dp"
            android:layout_toRightOf="@+id/btnRecipeAdd"
            android:layout_alignParentRight="true"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:layout_weight=".5"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/relativeLayoutRecipe1"
        android:background="@drawable/textview_border"
        android:layout_margin="10dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:background="#FFF">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>
